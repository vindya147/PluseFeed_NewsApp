<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:gravity="center_horizontal">

    <!-- Top bar with PulseFeed badge -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingEnd="24dp">


    </RelativeLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio-Data"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black"/>

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile_icon"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"/>

    <!-- Name -->
    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vindya Pramuditha Wttegedara"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"/>

    <!-- Email -->
    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wattegedaravindya147@gmail.com"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#888888"
        android:layout_marginBottom="16dp"/>

    <!-- Index Number Label -->
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Index Number"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"/>

    <!-- Index Number Edit -->
    <EditText
        android:id="@+id/editIndexNumber"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/lavender_border"
        android:layout_marginTop="20dp"
        android:hint="Update Index Number"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginBottom="8dp"/>

    <!-- Email Label -->
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"/>

    <!-- Email Edit -->
    <EditText
        android:id="@+id/editEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/lavender_border"
        android:layout_marginTop="20dp"
        android:hint="Update Email Address"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginBottom="8dp"/>

    <!-- User Name Label -->
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"/>

    <!-- User Name Edit -->
    <EditText
        android:id="@+id/editUserName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/lavender_border"
        android:layout_marginTop="20dp"
        android:hint="Update User Name"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- Update Profile Button -->
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Update Profile"
        android:id="@+id/btnUpdateProfile"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/lavender"
        app:cornerRadius = "20dp"/>

    <!-- Release Version -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Release Version: 2.3.5"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black"/>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FACULTY EVENT"
        android:textStyle="bold"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/black"/>

    <!-- News Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/purple_700">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/newsImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/facultyimg" />

            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colombo University Press Publishes its First Book: 'A Practical Guide to Basic Networking'"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/newsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The book “A Practical Guide to Basic Networking,” written by academics at the University of Colombo School of Computing, namely Mr Tharindu Wijethilake, Dr Chamath Keppitiyagama, Mr Kenneth Thilakarathna, and Dr Ajantha Atukorale, is the first book printed and published by the University of Colombo Press."
                android:textSize="13sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/seeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See more...."
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_gravity="end"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/newsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025/06/12"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>